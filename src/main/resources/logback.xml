<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true" scanPeriod="30 seconds">
	
	<!-- Console appender for standard output -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS} %5level --- [%15.15thread] %-40.40logger{39} : %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- Root logger level -->
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
	</root>
	
	<!-- Your application logs - ALL DEBUG -->
	<logger name="org.csanchez.adk.agents.k8sagent" level="DEBUG" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>
	
	<!-- ADK framework logs -->
	<logger name="com.google.adk" level="DEBUG" additivity="false">
		<appender-ref ref="CONSOLE" />
	</logger>
	
	<!-- Reduce noise from frameworks -->
	<logger name="org.springframework" level="INFO" />
	<logger name="io.fabric8.kubernetes.client" level="INFO" />
	<logger name="org.apache.http" level="WARN" />
	<logger name="io.netty" level="WARN" />
	
</configuration>
