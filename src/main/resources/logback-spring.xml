<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	
	<include resource="org/springframework/boot/logging/logback/defaults.xml"/>
	<include resource="org/springframework/boot/logging/logback/console-appender.xml" />
	
	<!-- Custom console pattern with colors -->
	<property name="CONSOLE_LOG_PATTERN" 
		value="%clr(%d{yyyy-MM-dd'T'HH:mm:ss.SSS}){faint} %clr(%5p) %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n"/>
	
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${CONSOLE_LOG_PATTERN}</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>
	
	<!-- Root logger -->
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
	</root>
	
	<!-- Your agent - DEBUG level -->
	<logger name="org.csanchez.adk.agents.k8sagent" level="DEBUG"/>
	
	<!-- ADK framework - DEBUG level -->
	<logger name="com.google.adk" level="DEBUG"/>
	
	<!-- Reduce Spring noise -->
	<logger name="org.springframework" level="INFO"/>
	<logger name="org.springframework.web" level="INFO"/>
	<logger name="org.springframework.boot" level="INFO"/>
	
	<!-- Reduce Kubernetes client noise -->
	<logger name="io.fabric8.kubernetes" level="WARN"/>
	<logger name="okhttp3" level="WARN"/>
	
</configuration>


